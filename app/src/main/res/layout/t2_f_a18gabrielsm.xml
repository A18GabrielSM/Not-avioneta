<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".T2_F_A18GabrielSM">

    <EditText
        android:id="@+id/edtName"
        android:inputType="textCapWords"
        android:textColor="@color/green"
        android:hint="@string/nameHint"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />

    <EditText
        android:id="@+id/edtPhone"
        android:inputType="phone"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/edtName"
        />

    <Button
        android:id="@+id/btnCall"
        android:text="@string/callButton"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtPhone"/>

    <Button
        android:id="@+id/btnSalary"
        android:text="@string/salaryButton"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtPhone"
        android:layout_alignParentRight="true"/>

    <Button
        android:id="@+id/btnVideo"
        android:text="@string/videoButton"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCall"/>

    <Button
        android:id="@+id/btnAudio"
        android:text="@string/audioButton"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSalary"
        android:layout_alignParentRight="true"/>

</RelativeLayout>